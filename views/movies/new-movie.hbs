<br><h2>Create a new movie</h2><br>

<form action="/movies/create" method="POST">
  <label> Title:
    <input type="text" name="title" />
  </label>
  <br>

  <label> Genre:
    <textarea type="text" name="genre"> </textarea>
  </label>
  <br>

  <label for="author-select"> Cast:
    <select name="cast">
      <option disable selected value=""></option>
      {{#each dbMovies}}
        <option value="{{_id}}"> {{this.celebrity}} </option>
      {{/each}}
    </select>
  </label>
  <br>

  <button type="submit"> Create a movie </button>
</form>